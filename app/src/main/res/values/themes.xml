<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.LogFox" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">?isLightTheme</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">?isLightTheme</item>

        <item name="enableEdgeToEdge">true</item>
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="o_mr1">shortEdges</item>

        <item name="materialAlertDialogTheme">@style/LogFoxMaterialAlertDialog</item>
        <item name="bottomSheetDialogTheme">@style/LogFoxBottomSheetDialogStyle</item>
        <item name="preferenceTheme">@style/LogFoxPreferenceTheme</item>
        <item name="toolbarStyle">@style/LogFoxToolbarStyle</item>

        <item name="fontFamily">@font/google_sans</item>
        <item name="android:fontFamily">@font/google_sans</item>
    </style>

    <style name="Theme.LogFox.Translucent" parent="Theme.LogFox">
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <!-- Black theme, all colors -6 -->
    <style name="ThemeOverlay.LogFox.Black" parent="" tools:ignore="PrivateResource">
        <item name="android:colorBackground">@color/m3_ref_palette_neutral0</item>

        <item name="colorSurface">@color/m3_ref_palette_neutral0</item>
        <item name="colorSurfaceContainer">@color/m3_ref_palette_neutral6</item>
        <item name="colorSurfaceContainerLowest">@color/m3_ref_palette_neutral0</item> <!-- It should be -2 -->
        <item name="colorSurfaceContainerLow">@color/m3_ref_palette_neutral4</item>
        <item name="colorSurfaceContainerHigh">@color/m3_ref_palette_neutral10</item> <!-- It should be 11 -->
        <item name="colorSurfaceContainerHighest">@color/m3_ref_palette_neutral12</item> <!-- It should be 16 -->
        <item name="colorSurfaceBright">@color/m3_ref_palette_neutral10</item> <!-- It should be 18 -->
        <item name="colorSurfaceDim">@color/m3_ref_palette_neutral0</item>
    </style>

</resources>