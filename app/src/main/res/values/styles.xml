<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="LogFoxMaterialAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog.Centered">
        <item name="buttonBarPositiveButtonStyle">@style/LogFoxMaterialAlertDialog.Button</item>
        <item name="buttonBarNegativeButtonStyle">@style/LogFoxMaterialAlertDialog.Button</item>
        <item name="buttonBarNeutralButtonStyle">@style/LogFoxMaterialAlertDialog.Button</item>
    </style>

    <style name="LogFoxMaterialAlertDialog.Button" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LogFoxBottomNavigationViewTextStyle">
        <item name="android:fontFamily">@font/google_sans</item>
    </style>

    <style name="LogFoxBottomSheetDialogStyle" parent="ThemeOverlay.Material3.DayNight.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:enforceNavigationBarContrast" tools:targetApi="q">false</item>
    </style>

    <style name="LogFoxPreferenceTheme" parent="PreferenceThemeOverlay">
        <item name="android:layout">@layout/fragment_settings</item>
    </style>

    <style name="LogFoxToolbarTitleAppearance" parent="TextAppearance.Material3.ActionBar.Title">
        <item name="fontFamily">@font/google_sans_medium</item>
        <item name="android:fontFamily">@font/google_sans_medium</item>
    </style>

    <style name="LogFoxToolbarSubtitleAppearance" parent="TextAppearance.Material3.ActionBar.Subtitle">
        <item name="fontFamily">@font/google_sans</item>
        <item name="android:fontFamily">@font/google_sans</item>
    </style>

    <style name="LogFoxToolbarStyle" parent="Widget.Material3.Toolbar">
        <item name="titleTextAppearance">@style/LogFoxToolbarTitleAppearance</item>
        <item name="subtitleTextAppearance">@style/LogFoxToolbarSubtitleAppearance</item>
    </style>
</resources>